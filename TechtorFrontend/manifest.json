{
    "manifest_version": 3,
    "name": "Techtor",
    "version": "1.0",
    "description": "Select text to show in a popup next to it.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "http://127.0.0.1:5000/*",
        "http://localhost:5000/*"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["lib/axios.min.js", "content_script.js"],
        "run_at": "document_end"
      }
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
}
  